{
  "extends": "@project/config/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noResolve": false,
    "sourceMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "inlineSources": true,
    "composite": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "./public",
    "dist",
    "test"
  ],
  "references": [
    {
      "path": "../api/tsconfig.json"
    }
  ]
}
